<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MyThemeBlue" >
    <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <!-- 我们以蓝色为主色调 -->
    <style name="MyThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_right</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>



    <style name="MyMarginStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/btn_top_5dp</item>
        <item name="android:layout_marginLeft">@dimen/btn_top_10dp</item>
        <item name="android:layout_marginRight">@dimen/btn_top_10dp</item>
    </style>

    <!--按钮样式-->
    <style name="MyBtnStyle" parent="@style/MyMarginStyle">
        <item name="android:textAllCaps">false</item>
    </style>

    <!--文本样式-->
    <style name="MyTextStyle" parent="@style/MyMarginStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--控制头部据appbar的样式-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!--用于控制toolbar溢出菜单的样式-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBarNoShadow" parent="Base.Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <style name="MyThemeBlue.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyThemeBlue.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyThemeBlue.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="RadioButtonStyles">
        <item name="android:button">@drawable/radiobutton_seletor</item>
    </style>

    <style name="TabLayoutTextStyles" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15dp</item>
    </style>
</resources>
