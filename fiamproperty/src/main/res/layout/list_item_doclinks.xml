<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/btn_top_5dp"
    android:background="@color/white"
    android:foreground="?android:selectableItemBackground"
    android:orientation="horizontal"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:padding="@dimen/btn_top_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/btn_top_5dp">

                <TextView
                    android:id="@+id/displayname_title_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wd_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_16sp" />

                <TextView
                    android:id="@+id/document_text_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/btn_top_5dp"
                    android:hint="@string/have_notdata_hint"
                    android:textSize="@dimen/dimens_16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_line"
                android:background="@mipmap/line"></View>

            <LinearLayout
                android:id="@+id/bm_linearLayout_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/btn_top_5dp">

                <TextView
                    android:id="@+id/cudept_title_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ms_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_16sp" />

                <TextView
                    android:id="@+id/description_text_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/btn_top_5dp"
                    android:hint="@string/have_notdata_hint"
                    android:textSize="@dimen/dimens_16sp" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_line"
                android:layout_marginRight="80dp"
                android:background="@mipmap/line"></View>

            <LinearLayout
                android:id="@+id/ks_linearLayout_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/btn_top_5dp">

                <TextView
                    android:id="@+id/ks_title_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_owner_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_16sp" />

                <TextView
                    android:id="@+id/create_owner_text_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/btn_top_5dp"
                    android:hint="@string/have_notdata_hint"
                    android:textSize="@dimen/dimens_16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_line"
                android:background="@mipmap/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/btn_top_5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/createdate_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_16sp" />

                <TextView
                    android:id="@+id/createdate_text_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/btn_top_5dp"
                    android:hint="@string/have_notdata_hint"
                    android:textSize="@dimen/dimens_16sp" />

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/preview_button_id"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="@string/yl_text" />

    </RelativeLayout>

</android.support.v7.widget.CardView>