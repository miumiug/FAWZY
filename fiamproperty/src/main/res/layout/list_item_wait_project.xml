<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_white"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <CheckBox
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:clickable="false"/>

            <TextView
                android:id="@+id/text_tittle"
                android:layout_width="0dp"
                android:layout_weight="4.5"
                android:layout_margin="@dimen/dimen_10"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="#576FAE"
                android:text="解放智能网联平台产品开发"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <TextView
            android:id="@+id/text_bh"
            android:background="@drawable/tab_left_selectors"
            android:layout_width="15dp"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="驳回"
            android:textColor="#3B424E"
            android:gravity="center"
            android:textSize="15dp"/>

            <TextView
                android:id="@+id/text_sp"
                android:background="@drawable/tab_right"
                android:layout_width="15dp"
                android:layout_weight="1"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="审批"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="15dp"/>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33888888"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F9F9F9"
                android:layout_margin="0.5dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="编号："
                        android:textSize="13dp"
                        android:textColor="#929CA6"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/text_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="132425"
                        android:textSize="13dp"
                        android:textColor="#929CA6"
                        android:gravity="center"/>

                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="35dp"
                    android:background="#33888888"></View>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目号："
                        android:textSize="13dp"
                        android:textColor="#929CA6"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/text_projectnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="132425"
                        android:textSize="13dp"
                        android:textColor="#929CA6"
                        android:gravity="center"/>

                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="35dp"
                    android:background="#33888888"></View>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="状态："
                        android:textSize="13dp"
                        android:textColor="#929CA6"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/text_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="草稿"
                        android:textSize="13dp"
                        android:gravity="center"/>

                </LinearLayout>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F9F9F9"
                android:layout_margin="0.5dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总工时："
                        android:textSize="13dp"
                        android:textColor="#929CA6"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="132425"
                        android:textSize="13dp"
                        android:textColor="#929CA6"
                        android:gravity="center"/>

                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="35dp"
                    android:background="#33888888"></View>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目经理："
                        android:textSize="13dp"
                        android:textColor="#929CA6"
                        android:gravity="center"/>

                    <RadioGroup
                        android:id="@+id/radioGroupID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RadioButton
                            android:id="@+id/managerGroupID"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:enabled="false"/>
                    </RadioGroup>

                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="35dp"
                    android:background="#33888888"></View>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="负责人："
                        android:textSize="13dp"
                        android:textColor="#929CA6"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/text_fzr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="负责人"
                        android:textSize="13dp"
                        android:gravity="center"
                        android:textColor="#929CA6"/>

                </LinearLayout>

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:text="1"-->
                <!--android:gravity="center"-->
                <!--android:textColor="#C7CED6"-->
                <!--android:textSize="16dp"/>-->

            <TextView
                android:id="@+id/text_brief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="参加10米公路法规升级阶段汇报 3小时"
                android:textColor="#666B74"
                android:textSize="15dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>