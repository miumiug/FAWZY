<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F8F9FB">

        <TextView
            android:id="@+id/btn_open_weixin"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="请选择写实模板"
            android:textColor="#262626"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"></View>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />

        <LinearLayout
            android:id="@+id/have_not_data_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/circle_warn"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="!"
                    android:textColor="#FFFFFF"
                    android:textSize="35dp" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="暂无写实模板"
                android:textColor="#929CA6"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="请前往PC端资产管理系统创建"
                android:textColor="#929CA6"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="@dimen/dimens_20dp"
            android:gravity="center">
            <TextView
                android:id="@+id/text_cancle"
                android:background="@drawable/tab_left_selectors"
                android:layout_width="132dp"
                android:layout_height="45dp"
                android:text="取消"
                android:textColor="#3B424E"
                android:gravity="center"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/text_sure"
                android:background="@drawable/tab_right"
                android:layout_width="132dp"
                android:layout_height="45dp"
                android:text="确认"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>